<span> Campo de búsqueda</span>

<table class="main">
	<tr>
		<form method="get" action="/quizes">
			<input type="text" name="search" size="40" value="" required/>&nbsp;&nbsp;
			<input type="submit" value="buscar entre las preguntas" />
		</form>
	</tr>
</table>

<br />
<br />
<br />

<table>
	<% var i; for(i=0; i < quizes.length; i++) { %>
		<tr>
			<td>
				<a href="quizes/<%= quizes[i].id %>">
					Pregunta: <%= quizes[i].pregunta %> Género: <%= quizes[i].genero %>
				</a>
			</td>

		<%if (session.user) { %>				
			<td><a href="quizes/<%= quizes[i].id %>/edit"> <button> editar </button></a></td>
			<td>
				<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
					<button type="submit" 
					onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
						borrar
					</button>			
				</form>
			</td>
		<% } %>
		</tr>
	<% } %>
</table>

<% if(session.user) {%>
	<a href="/quizes/new"><button type="button"> Crear Pregunta</button></a>
<% } %>

